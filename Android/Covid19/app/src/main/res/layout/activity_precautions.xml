<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="1. Donâ€™t use your master-hand."
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="2. Wash your hands frequently."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="3. Use soap or sanitizer with 60% alcohol."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="4. Social distancing."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="5. Avoid touching eyes, nose, and mouth."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="6. Avoid close contact with sick people."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="7. Avoid handshakes and hugs."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="8. Stay home."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="9. Cover your cough or sneeze with a tissue."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="10. Clean frequently-touched objects and surfaces."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="11. Wear mask if you have cough or breathing difficulties."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="12. Don't panic."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="13. Avoid all non-essential travel."
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>