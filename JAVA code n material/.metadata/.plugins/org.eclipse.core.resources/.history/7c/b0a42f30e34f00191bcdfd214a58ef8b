package Problems;

public class SymbolInGrammer {
	
	static public int kthGrammar(int N, int K) {
        String str = ""; 
        str = grammer(N, K, str);
        return str.charAt(K - 1) - '0';
    }
    
    private String grammer(int n, int k, String str) {
        if(n == 1)
            return "" + 0;
        str = grammer(n - 1, k, str);
        for(int i = 0; i < str.length(); i++) {
            if(str.charAt(i) == '0')
                str += 01;
            if(str.charAt(i) == '1')
                str += 10;
        }
        return str;
    }

	public static void main(String[] args) {
		
		System.out.println(kthGrammer(4, 5));

	}

}
