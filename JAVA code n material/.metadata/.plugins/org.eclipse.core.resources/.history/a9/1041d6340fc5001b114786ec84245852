package learning;

import java.util.Scanner;

public class TotalAmountOfPurchase {

	public static void main(String[] args) {
		@SuppressWarnings("resource")
		Scanner scanner = new Scanner (System.in);	
		
		System.out.print("Enter rate of item: ");
		int rate = scanner.nextInt();
		System.out.print("Enter quantity of item: ");
		int quantity = scanner.nextInt();
		
		int totalamount = rate*quantity;
		
		if (totalamount>=2000) {
			int discountamount = totalamount/100*50;
			int netamount = totalamount/100*50 - discountamount;
			System.out.print("netamount: " + netamount);
		}
		else {
			System.out.print("total amount: " + totalamount);
		}
	}

}
