package Problems;

//This question solved by using dyamnic programming

public class LongestPalindroamicSubString4 {
	
	static String longestPalindrome ( String s ) {
		
		int temp [] [] = new int [ s.length () ] [ s.length () ];
		int i, j;
		int largest = 0, pos = 0;
		
		for ( i = 0; i < s.length (); i ++ ) {
			
			for ( j = 0; j < s.length (); j ++ ) {
				
				if ( s.charAt ( i ) == s.charAt ( s.length () - 1 - j ) ) {
					
					temp [ i ] [ j ] += 1;
					
					if ( i != 0 && j != 0 ) 
						temp [ i ] [ j ] += temp [ i - 1 ] [ j - 1 ];
					
				}
				
				if ( temp [ i ] [ j ] >= largest ) {
					
					largest = temp [ i ] [ j ];
					pos = i;
					
				}
				
			}
			
		}
		
		String palindroame = "";
		
		for ( i = pos; i > pos - largest; i -- )
			palindroame += s.charAt ( i );
				
		return palindroame;		
		
	}

	public static void main(String[] args) {
		
		String s = "";
		
