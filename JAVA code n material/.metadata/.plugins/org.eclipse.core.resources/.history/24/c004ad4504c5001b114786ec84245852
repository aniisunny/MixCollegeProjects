package learning;

import java.util.Scanner;

public class TotalAmountOfPurchase {

	public static void main(String[] args) {
		@SuppressWarnings("resource")
		Scanner scanner = new Scanner (System.in);	
		
		System.out.print("Enter rate of item: ");
		int rate = scanner.nextInt();
		System.out.print("Enter quantity of item: ");
		int quantity = scanner.nextInt();
		
		int totalamountofpurchase = rate*quantity;
		
		if (totalamountofpurchase>=2000) {
			System.out.print("in net amount we have 15% DISCOUNT.");
		}
		else {
			System.out.print("in net amount we don't have 15% DISCOUNT.");
		}
	}

}
